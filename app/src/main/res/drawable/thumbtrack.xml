<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <layer-list>
            <item android:drawable="@drawable/thumbtrack_on" android:width="40dp" android:height="22dp"/>
        </layer-list>
    </item>
    <item android:state_checked="false">
            <layer-list>
                <item android:drawable="@drawable/thumbtrack_off" android:width="40dp" android:height="22dp"/>
            </layer-list>
    </item>
</selector>