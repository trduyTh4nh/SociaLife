<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".AddFragment">

    <LinearLayout
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_marginTop="60dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginTop="20dp"
            android:textSize="30dp"
            android:textStyle="bold"
            android:text="Đăng bài"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></TextView>

        <LinearLayout
            android:padding="8dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/background_text_desciption"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="55dp"
                        android:layout_height="60dp"
                        android:scaleX="1"
                        android:scaleY="1"
                        android:src="@drawable/avatar"></ImageView>
                    <LinearLayout
                        android:layout_marginLeft="6dp"
                        android:layout_marginTop="5dp"
                        android:gravity="center_vertical"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tvName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sơn Tùng MTP"
                            android:textColor="@color/black"
                            android:textStyle="bold"></TextView>
                        <TextView
                            android:layout_marginTop="5dp"
                            android:text="\@sontungptmp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"></TextView>
                    </LinearLayout>

                </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_marginTop="15dp"
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/edtNoiDung"
                    android:layout_width="match_parent"
                    android:layout_height="190dp"
                    android:background="#A7A7A7"
                    android:gravity="top"
                    android:hint="Nội dung bài viết"
                    android:padding="10dp"
                    android:textColor="@color/black"
                    android:textStyle="bold"></EditText>


                <Button
                    android:id="@+id/btnDangBai"
                    android:layout_width="345dp"
                    android:layout_height="wrap_content"
                    android:text="Đăng bài" />

                <ImageView
                    android:id="@+id/imgDangBai"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/avatar" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>



    <androidx.appcompat.widget.Toolbar
        android:layout_marginLeft="-15dp"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        android:background="@color/white">
        <LinearLayout
            android:layout_marginTop="5dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="fill_parent">
            <ImageView
                android:id="@+id/imageLogo"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_alignParentTop="true"
                android:layout_marginStart="-15dp"
                android:src="@drawable/logo" />

            <TextView
                android:layout_marginLeft="-10dp"
                android:layout_marginTop="10dp"
                android:background="@color/back"
                android:layout_width="match_parent"
                android:layout_height="2dp"></TextView>
        </LinearLayout>

    </androidx.appcompat.widget.Toolbar>
</FrameLayout>